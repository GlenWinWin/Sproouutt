<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_plants_animals"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.charlotte.listviewregion.PlantsAnimals"
    android:background="@drawable/ecosystem">

    <ImageView

        android:layout_marginTop="100dp"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:id="@+id/buttonPlants"
        android:layout_centerHorizontal="true"
        android:src="@drawable/plants_button_normal"
         />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/buttonAnimals"
        android:src="@drawable/animals_button_normal"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/buttonPlants"
        android:layout_marginLeft="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
