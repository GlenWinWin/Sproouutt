<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RadioGroup
    android:layout_centerHorizontal="true"
    android:id="@+id/rdg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RadioButton
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/a"
    android:text="Adoxaceae"
    android:checked="true"
    >
    </RadioButton>
    <RadioButton
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/b"
    android:text="Altingiaceae"
    >
    </RadioButton>
    <RadioButton
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/c"
    android:text="Anacardiaceae"
    >
    </RadioButton>
    <RadioButton
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/d"
    android:text="Ericaceae"
    >
    </RadioButton>
    <RadioButton
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/e"
    android:text="Eucommiaceae"
    >
    </RadioButton>
    <RadioButton
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/f"
    android:text="Fabaceae"
    >
    </RadioButton>
    <RadioButton
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/g"
    android:text="Hamamelidaceae"
    >
    </RadioButton>
    <RadioButton
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/h"
    android:text="Oleaceae"
    >
    </RadioButton>
    <RadioButton
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/i"
    android:text="Platanaceae"
    >
    </RadioButton>
    <RadioButton
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/j"
    android:text="Rosaceae"
    >
    </RadioButton>
    <RadioButton
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/k"
    android:text="Rubiaceae"
    >
    </RadioButton>
    <RadioButton
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/l"
    android:text="Salicaceae"
    >
    </RadioButton>
    <RadioButton
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/m"
    android:text="Sapindacea"
    >
    </RadioButton>
    <RadioButton
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/n"
    android:text="Sapotaceae"
    >
    </RadioButton>
    </RadioGroup>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSe"
            android:layout_below="@+id/rdg"
            android:text="Select"
            />
    </RelativeLayout>
</RelativeLayout>

